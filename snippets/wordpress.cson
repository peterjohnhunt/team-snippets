    'WP Nav Menu':
        'prefix': 'wp_nav_menu'
        'body': """
        	\$nav_args = array(
        		${1:'theme_location' => '${2:header-menu}',}
        		${3:'fallback_cb' => false,}
        		${4:'container' => '${5:div}',}
