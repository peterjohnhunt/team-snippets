    'WP Get Terms':
        'prefix': 'get_terms'
        'body': """
            $taxonomies = array(
                '${1:taxonomy_name}',
            );

            $args = array(
                ${2:'orderby'           => ${3:'name'},}
                ${4:'order'             => ${5:'ASC'},}
                ${6:'hide_empty'        => ${7:true},}
                ${8:'parent'            => ${9:''},}
            );

            $terms = get_terms($taxonomies, $args);$10
        """
